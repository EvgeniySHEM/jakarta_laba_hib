<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

      <class>ru.sanctio.jakarta_laba_hib.entity.UsersEntity</class>
      <class>ru.sanctio.jakarta_laba_hib.entity.AddressEntity</class>
      <class>ru.sanctio.jakarta_laba_hib.entity.ClientEntity</class>
      <properties>
          <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/jakarta"/>
          <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
          <property name="hibernate.connection.username" value="evgeniysharychenkov"/>
          <property name="hibernate.show_sql" value="true"/>
          <property name="hibernate.enable_lazy_load_no_trans" value="true"/>
      </properties>
  </persistence-unit>
</persistence>
